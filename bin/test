#!/usr/bin/env python3

import sys
import pytest
import numpy
numpy.warnings.filterwarnings('ignore')

args = ['-v']

if 'pep8' in sys.argv:
    args.append('--pep8')

if 'cov' in sys.argv:
    args.extend(['--cov-report=term-missing',
                 '--cov=openpnm',
                 '--cov-config=.coveragerc'])

if 'nbval' in sys.argv:
    args.append('--nbval')

if 'min' in sys.argv:
    args.extend(['--ignore=examples/'])
    args.extend(['--ignore=scripts/'])

exit_code = pytest.main(args)
exit(exit_code)

